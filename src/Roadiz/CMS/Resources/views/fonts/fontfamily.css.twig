{% for item in fonts %}
{% set font = item.font %}
@font-face {
    font-family: "{{ font.hash }}";
    src: url('{{ url('FontFile', {
            'filename'  : font.hash,
            'variant'   : font.variant,
            'extension' : "eot",
            'token'     : item.token
        }) }}');
    src: url('{{ url('FontFile', {
            'filename'  : font.hash,
            'variant'   : font.variant,
            'extension' : "eot",
            'token'     : item.token
        }) }}?#iefix') format('embedded-opentype'),
        {% if font.getWOFF2Filename %}
        url('{{ url('FontFile', {
            'filename'  : font.hash,
            'variant'   : font.variant,
            'extension' : "woff2",
            'token'     : item.token
        }) }}') format('woff2'),
        {% endif %}
        {% if font.getWOFFFilename %}
        url('{{ url('FontFile', {
            'filename'  : font.hash,
            'variant'   : font.variant,
            'extension' : "woff",
            'token'     : item.token
        }) }}') format('woff'),
        {% endif %}
        {% if font.getOTFFilename %}
        url('{{ url('FontFile', {
            'filename'  : font.hash,
            'variant'   : font.variant,
            'extension' : "otf",
            'token'     : item.token
        }) }}') format('opentype'),
        {% endif %}
        {% if font.getSVGFilename %}
        url('{{ url('FontFile', {
            'filename'  : font.hash,
            'variant'   : font.variant,
            'extension' : "svg",
            'token'     : item.token
        }) }}') format('svg')
        {% endif %};
{% for key, value in font.fontVariantInfos %}
    font-{{ key }}: {{ value }};
{% endfor %}
}
{% endfor %}
