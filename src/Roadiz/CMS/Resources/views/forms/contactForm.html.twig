{% extends 'base_email.html.twig' %}

{% block title %}<title>{{ title }}</title>{% endblock %}

{% block content_table %}
    <table width="100%" cellpadding="0" cellspacing="0">
        <tr>
            <td class="content-block">
                <h1>{% trans %}contact.form{% endtrans %}</h1>
            </td>
        </tr>
        <tr>
            <td class="content-block">
                <h2>{{ title }}</h2>
            </td>
        </tr>
        <tr>
            <td class="content-block">
                <table class="invoice">
                    <tr>
                        <td>
                            <table class="invoice-items" cellpadding="0" cellspacing="0">
                                {% for field in fields %}
                                    {% if not field.name %}
                                        <tr>
                                            <td colspan="2" class="alignleft">{{ field.value }}</td>
                                        </tr>
                                    {% elseif not field.value %}
                                        <tr>
                                            <td colspan="2" class="paddingright"><strong>{{ field.name|trans }}</strong></td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td class="paddingright"><strong>{{ field.name|trans }}</strong></td>
                                            <td class="alignleft">{{ field.value }}</td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
{% endblock %}
