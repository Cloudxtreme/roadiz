<nav class="uk-navbar uk-navbar-attached" id="main-navigation" data-active-node="{{ node.id }}">

    {#
     #  Home with a node
     #}
   {#  {% if home %}
        {% if home.nodeSources.first.title %}
            {% set hometitle = home.nodeSources.first.title %}
