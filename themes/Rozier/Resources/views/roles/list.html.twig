{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global  content-nav-and-filters">

    <header class="content-header header-role header-role-list">
        <h1 class="content-title role-title">{% trans %}roles{% endtrans %}</h1>
        {% include 'widgets/countFiltersBar.html.twig' %}
        <div class="content-header-action-menu">
            <nav>
        		<a class="uk-button" href="{{ path('rolesAddPage') }}"><i class="uk-icon-plus"></i> {% trans %}add.role{% endtrans %}</a>
        		<a class="uk-button" href="{{ path('rolesImportPage') }}"><i class="uk-icon-upload"></i> {% trans %}import.role{% endtrans %}</a>
                <a class="uk-button" href="{{ path('rolesExportAllPage') }}"><i class="uk-icon-download"></i> {% trans %}export.all.roles{% endtrans %}</a>
            </nav>
        </div>
    </header>

	{% include 'widgets/filtersBar.html.twig' %}
	<article class="content content-no-action-menu content-node-types-list">
        <div class="content-table-cont">
			<table class="content-table roles uk-table">
				<thead>
			        <tr>
			            <th>{% trans %}name{% endtrans %}</th>
			            <th>{% trans %}actions{% endtrans %}</th>
			        </tr>
			    </thead>
				<tbody>
					{% for role in roles %}
					<tr>
						<td>
							{% if not role.required %}<a href="{{ path('rolesEditPage', { roleId: role.getId }) }}">{{ role.getName }}</a>{% else %}
							{{ role.getName }}{% endif %}
						</td>
						<td>
							{% if not role.required %}
							<a class="uk-button uk-button-small uk-button-danger" href="{{ path('rolesDeletePage', { roleId: role.getId }) }}"><span class="uk-icon-rz-trash-o"></span> {% trans %}delete{% endtrans %}</a>
							<a class="uk-button uk-button-small uk-button-success" href="{{ path('rolesExportPage', { roleId: role.getId }) }}"><i class="uk-icon-rz-download"></i> {% trans %}export{% endtrans %}</a>
							{% else %}
							<div class="uk-badge uk-badge-success"><span class="uk-icon-rz-lock"></span> {% trans %}role.required{% endtrans %}</div>
							{% endif %}
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</article>
</section>
{% endblock %}
