{% extends 'base.html.twig' %}


{% block content %}
<section id="manage-role">
	<h1 id="role-title">{% trans %}Add a new role{% endtrans %}</h1>

	{% form_theme form 'forms.html.twig' %}
    <form id="add-role-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
	    <fieldset data-uk-margin>
	    	{% spaceless %}
            <button data-action-save="#add-role-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                <i class="uk-icon-plus"></i>
                <span class="label">{% trans %}add.role{% endtrans %}</span>
            </button>
            {% endspaceless %}
   		</fieldset>
	</form>
    {% include 'roles/actionsMenu.html.twig' %}
</section>
{% endblock %}
