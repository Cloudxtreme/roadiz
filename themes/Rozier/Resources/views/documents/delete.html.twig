{% extends 'base.html.twig' %}


{% block content %}
<section id="manage-document">
	<h1 id="node-title">{{ "delete.document.%name%"|trans({'%name%': document.getFilename}) }}</h1>

	{% form_theme form 'forms.html.twig' %}
	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}
	    <fieldset data-uk-margin>
	    	<legend>{% trans %}are_you_sure.delete.document{% endtrans %}</legend>
	    	<a href="{{ path('documentsHomePage') }}" class="uk-button">{% trans %}cancel{% endtrans %}</a>
	    	<input class="uk-button uk-button-danger" type="submit" />
   		</fieldset>
	</form>
</section>
{% endblock %}
