{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global content-nav-and-filters">

	<header class="content-header header-document header-document-list">
        <h1 class="content-title">{% trans %}documents{% endtrans %}</h1>
        {% include 'widgets/countFiltersBar.html.twig' %}
        <div class="content-header-action-menu">
            <a class="uk-button" href="{{ path('documentsUploadPage') }}"><i class="uk-icon-plus"></i> {% trans %}upload.document{% endtrans %}</a>
           	<a class="uk-button" href="{{ path('documentsEmbedPage') }}"><i class="uk-icon-plus"></i> {% trans %}embed.document{% endtrans %}</a>
           	{# documentsRandomPage #}
           	<a class="uk-button rz-no-ajax-link" href="{{ path('documentsRandomPage') }}"><i class="uk-icon-magic"></i> {% trans %}random.document{% endtrans %}</a>
        </div>
    </header>

    {% include 'widgets/filtersBar.html.twig' %}

    <article class="content content-no-action-menu">
        <div class="content-table-cont">
			<table class="documents content-table uk-table">
				<thead>
			        <tr>
			            <th class="uk-text-center">{% trans %}document.thumbnail{% endtrans %}</th>
			            <th>{% trans %}document.filename{% endtrans %}</th>
			            <th>{# {% trans %}document.platform{% endtrans %} #}</th>
			            <th>{% trans %}document.createdAt{% endtrans %}</th>
			            <th>{% trans %}actions{% endtrans %}</th>
			        </tr>
			    </thead>
				<tbody>
					{% for document in documents %}
					<tr>
						{% if document.isImage %}
						<td class="uk-text-center">
							<a href="{{ path('documentsEditPage', { documentId: document.getId }) }}">
								{# <img width="100" alt="" src="{{ document.getViewer.getDocumentUrlByArray(thumbnailFormat) }}" /> #}
								{{ document.getViewer.getDocumentByArray(thumbnailFormat)|raw }}
							</a>
						</td>
						{% else %}
						<td class="uk-text-center">
							<a href="{{ path('documentsEditPage', { documentId: document.getId }) }}"><i class='uk-icon-large uk-icon-file-{{ document.getShortType }}-o'></i></a>
						</td>
						{% endif %}
						{% if document.isEmbed %}
						<td>
							<p>{{ document.getFilename }}</p>
						</td>
						<td class="platform-icon"><i class="uk-icon-rz-{{ document.getEmbedPlatform }}"></i></td>
						{% else %}
						<td colspan="2">
							<p>{{ document.getFilename }}</p>
						</td>
						{% endif %}
						<td>{{ document.getCreatedAt|localizeddate('short', 'none') }}</td>
						<td>
							<a class="uk-button uk-button-small uk-button-danger" href="{{ path('documentsDeletePage', { documentId: document.getId }) }}"><i class="uk-icon-trash-o"></i> {% trans %}delete{% endtrans %}</a>
						</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</article>
</section>
{% endblock %}
