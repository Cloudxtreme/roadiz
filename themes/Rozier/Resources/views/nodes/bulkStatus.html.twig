{% if not head.ajax %}{% set baseTemplate = '@Rozier/base.html.twig' %}{% else %}{% set baseTemplate = '@Rozier/ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}


{% block content %}
<section class="content-global change-status-node">
    <header class="content-header header-node header-node-preview">
        <h1 class="content-title node-change-status-title">{{ "change.nodes.status"|trans()|truncate(25, true, '[â€¦]') }}</h1>
    </header>

    <article class="content content-delete content-no-action-menu">
        {% spaceless %}
        <ul class="nodes-list">
        {% for node in nodes %}
            {% set source = node.nodeSources.first %}
            {% if source.title %}{% set title = source.title %}{% else %}{% set title = node.nodeName %}{% endif %}
            <li class="node-item">
                <span class="node-item-color" style="background-color:{{ node.nodeType.color }};"></span>
                <div class="node-border"></div>
                <div class="node-name">{{ title }}</div>
            </li>
        {% endfor %}
        </ul>
        {% endspaceless %}

        {% if referer %}
            {% set returnPath = referer %}
        {% else %}
            {% set returnPath = path('nodesHomePage') %}
        {% endif %}
        {% form_theme form '@Rozier/forms.html.twig' %}
        <form class="uk-form uk-form-stacked" action="{{ action }}" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend>{% trans %}are_you_sure.change-status.these.nodes{% endtrans %}</legend>
                <a href="{{ returnPath }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit"><i class="uk-icon-rz-save"></i> <span
                        class="button-text">{% trans %}change.nodes.status.all{% endtrans %}</span></button>
            </fieldset>
        </form>
    </article>
</section>
{% endblock %}
