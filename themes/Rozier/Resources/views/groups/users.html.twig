{% extends 'base.html.twig' %}

{% block content %}
<section id="manage-group-users">
	<h1 id="group-title">Edit {{ group.getName }} users</h1>

	{% include 'groups/navBar.html.twig' with {'group':group, current:'users'} %}

	<table class="groups-users uk-table">
		<thead>
	        <tr>
	            <th>{% trans %}User{% endtrans %}</th>
	            <th>{% trans %}Actions{% endtrans %}</th>
	        </tr>
	    </thead>
		<tbody>
			{% for user in group.getUsers %}
			<tr>
				<td>{{ user.getUserName }}</td>
				<td>
					<a class="uk-button uk-button-small uk-button-danger" href="{{ path('groupsRemoveUsersPage', { groupId: group.getId, userId: user.getId }) }}">{% trans %}Unlink{% endtrans %}</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	<h2>{% trans %}Add a user{% endtrans %}</h2>

	{% form_theme form 'forms.html.twig' %}
	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}
	    <fieldset data-uk-margin>
	    	<input class="uk-button uk-button-primary" type="submit" />
   		</fieldset>
	</form>

	{% include 'groups/actionsMenu.html.twig' %}
</section>
{% endblock %}
