{% extends 'simple.html.twig' %}

{% block content %}
<section id="login" {% if form.errors %}class="uk-animation-shake"{% endif %}>
    <div id="login-infos">
        <div id="login-logo">
            {% if themeServices.adminImage %}
                {{ themeServices.adminImage.viewer.getDocumentByArray({width:150})|raw }}
            {% else %}
                <i class="uk-icon-rz-roadiz-icon"></i>
            {% endif %}
        </div>
        <div id="login-credit">
            <i class="uk-icon-rz-rezozero"></i>
            <span id="login-version">{{ head.cmsVersion }} {{ head.cmsVersionNumber }}</span>
        </div>
    </div>
    <div id="login-formGlobal">
    	<h1 id="tag-title">{% trans %}back_office{% endtrans %}</h1>

        <div data-uk-alert class="uk-alert">{% trans %}to.get.new.password.enter.your.account.email{% endtrans %}</div>

       	{% form_theme form 'forms.html.twig' %}
        <form method="post" id="login-form" class="uk-form uk-form-stacked {% if form.errors %}uk-animation-shake{% endif %}" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
    	    <fieldset>
    	    	<button class="uk-button" type="submit"><i class="uk-icon-sign-in"></i> {% trans %}request.new.password{% endtrans %}</button>
       		</fieldset>
    	</form>
        <div id="login-link">
            <a id="frontend-home-link"
               title="{% trans %}see.website{% endtrans %}" target="_blank" href="{{ path('homePage') }}"><span class="uk-icon-button uk-icon-rz-earth"></span>
               <span class="text">{% trans %}view.site{% endtrans %}</span>
            </a>
            <a href="{{ path('loginPage') }}" class="login-link">{% trans %}back_to.login{% endtrans %}</a>
        </div>
    </div>
</section>
{% endblock %}
