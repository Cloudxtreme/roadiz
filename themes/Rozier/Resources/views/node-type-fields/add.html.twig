{% extends 'base.html.twig' %}


{% block content %}
<section id="manage-node-type">
	<h1 id="node-type-field-title">{% trans %}Add a new field{% endtrans %}</h1>
	<nav>
		<a class="uk-button uk-button-small" href="{{ path('nodeTypeFieldsListPage', { nodeTypeId: nodeType.getId }) }}"><span class="uk-icon-reply"></span>{% trans %}Back to fields{% endtrans %}</a>
	</nav>

	{% form_theme form 'forms.html.twig' %}
	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}
	    <fieldset data-uk-margin>
	    	<input class="uk-button uk-button-primary" type="submit" />
   		</fieldset>
	</form>
</section>
{% endblock %}
