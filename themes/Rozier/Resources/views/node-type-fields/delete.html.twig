{% extends 'base.html.twig' %}


{% block content %}
<section id="manage-node-type-field">
	<h1 id="node-type-field-title">{{ "delete.nodeTypeField.%name%"|trans({'%name%': field.getLabel}) }}</h1>

	{% form_theme form 'forms.html.twig' %}
	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}
	    <fieldset data-uk-margin>
	    	<legend>{% trans %}arz_you_sure.delete.nodeTypeField{% endtrans %}</legend>
	    	<a href="{{ path('nodeTypeFieldsListPage', { nodeTypeId: field.getNodeType.getId }) }}" class="uk-button"><i class="uk-icon-reply"></i> {% trans %}cancel{% endtrans %}</a>
	    	<input class="uk-button uk-button-danger" type="submit" />
   		</fieldset>
	</form>
</section>
{% endblock %}
