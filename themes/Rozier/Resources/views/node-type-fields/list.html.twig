{% extends 'base.html.twig' %}


{% block content %}
<section id="manage-node-type-fields">
	<h1 id="title">{{ "edit.nodeTypeFields.for.nodeType.%name%"|trans({'%name%': nodetype.getDisplayName}) }}</h1>
	<nav>
		<a class="uk-button" href="{{ path('nodeTypesHomePage') }}"><i class="uk-icon-reply"></i> {% trans %}back_to.nodeTypes{% endtrans %}</a>
		<a class="uk-button" href="{{ path('nodeTypeFieldsAddPage', { nodeTypeId: nodeType.getId }) }}"><i class="uk-icon-plus"></i> {% trans %}add.nodeTypeField{% endtrans %}</a>
	</nav>
	<table class="node-type-fields uk-table">
		<thead>
	        <tr>
	            <th>{% trans %}name{% endtrans %}</th>
	            <th>{% trans %}label{% endtrans %}</th>
	            <th>{% trans %}type{% endtrans %}</th>
	            <th>{% trans %}actions{% endtrans %}</th>
	        </tr>
	    </thead>
		<tbody>
			{% for field in fields %}
			<tr>
				<td><a href="{{ path('nodeTypeFieldsEditPage', { nodeTypeFieldId: field.getId }) }}">{{ field.getName }}</a></td>
				<td>{{ field.getLabel }}</td>
				<td>{{ field.getTypeName }}</td>
				<td>
					<a class="uk-button uk-button-small uk-button-danger" href="{{ path('nodeTypeFieldsDeletePage', { nodeTypeFieldId: field.getId }) }}"><i class="uk-icon-trash-o"></i> {% trans %}delete{% endtrans %}</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</section>
{% endblock %}
