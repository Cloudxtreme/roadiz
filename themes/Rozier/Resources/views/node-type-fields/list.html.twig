{% extends 'base.html.twig' %}


{% block content %}
<section id="manage-node-type-fields">
	<h1 id="title">{% trans %}Fields:Â {% endtrans %}{{ node_type.getDisplayName }}</h1>
	<nav>
		<a class="uk-button" href="{{ path('nodeTypesHomePage') }}"><i class="uk-icon-reply"></i> {% trans %}Back to node-types{% endtrans %}</a>
		<a class="uk-button" href="{{ path('nodeTypeFieldsAddPage', { node_typeId: nodeType.getId }) }}"><i class="uk-icon-plus"></i> {% trans %}Add a field{% endtrans %}</a>
	</nav>
	<table class="node-type-fields uk-table">
		<thead>
	        <tr>
	            <th>{% trans %}Name{% endtrans %}</th>
	            <th>{% trans %}Label{% endtrans %}</th>
	            <th>{% trans %}Type{% endtrans %}</th>
	            <th>{% trans %}Actions{% endtrans %}</th>
	        </tr>
	    </thead>
		<tbody>
			{% for field in fields %}
			<tr>
				<td><a href="{{ path('nodeTypeFieldsEditPage', { nodeTypeFieldId: field.getId }) }}">{{ field.getName }}</a></td>
				<td>{{ field.getLabel }}</td>
				<td>{{ field.getTypeName }}</td>
				<td>
					<a class="uk-button uk-button-small uk-button-danger" href="{{ path('nodeTypeFieldsDeletePage', { nodeTypeFieldId: field.getId }) }}">{% trans %}Delete{% endtrans %}</a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</section>
{% endblock %}