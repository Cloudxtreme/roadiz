{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}


{% block content %}
<section class="content-global add-user">

    <header class="content-header header-user header-user-edit">
        <h1 class="content-title user-add-title">{% trans %}add.user{% endtrans %}</h1>
    </header>

    <article class="content content-add">
    	{% form_theme form 'forms.html.twig' %}
        <form id="add-user-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
    	    <fieldset data-uk-margin>
    	    	<button data-action-save="#add-user-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <span class="icon-container"><i class="uk-icon-plus"></i></span>
                    <span class="label"><span class="label-text">{% trans %}add.user{% endtrans %}</span></span>
                </button>
       		</fieldset>
    	</form>
    </article>

    {% include 'users/actionsMenu.html.twig' %}
</section>
{% endblock %}
