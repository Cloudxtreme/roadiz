{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global">

    <header class="content-header header-tags header-tags-settings">
        <h1 class="content-title tags-settings-title">{{ "edit.tag.%name%.settings"|trans({'%name%': tag.getTagName }) }}</h1>

        {% include 'tags/navBar.html.twig' with {"tag": tag, "current": 'settings'} %}
    </header>

    <article class="content content-tags-settings">
        {% form_theme form 'forms.html.twig' %}
        <form id="edit-tag-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                {% spaceless %}
                <button data-action-save="#edit-tag-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <i class="uk-icon-save"></i>
                    <span class="label">{% trans %}save{% endtrans %}</span>
                </button>
                {% endspaceless %}
            </fieldset>
        </form>
    </article>

    {% include 'tags/actionsMenu.html.twig' %}

</section>
{% endblock %}