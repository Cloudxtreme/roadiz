    <a class="uk-button" href="{{ path('fontsHomePage') }}"><i class="uk-icon-reply"></i><span class="label">{% trans %}back_to.fonts{% endtrans %}</span></a>
    {% if font.getId %}
    <a class="uk-button rz-no-ajax-link" href="{{ path('fontsDownloadPage', { fontId: font.getId }) }}"><i class="uk-icon-download"></i><span class="label">{% trans %}download{% endtrans %}</span></a>
    {# Delete current node #}
    <a class="uk-button uk-button-danger" href="{{ path('fontsDeletePage', { fontId: font.getId}) }}">
        <i class="uk-icon-trash-o"></i><span class="label">{% trans %}delete.font{% endtrans %}</span>
    </a>
    {% endif %}
</nav>
{% endspaceless %}
