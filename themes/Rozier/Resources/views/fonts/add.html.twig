{% extends 'base.html.twig' %}

{% block content %}

<section id="manage-font">
	<h1 id="font-title">{% trans %}Add a new font{% endtrans %}</h1>
	<nav><a class="uk-button uk-button-small" href="{{ path('fontsHomePage') }}"><i class="uk-icon-reply"></i> {% trans %}Back to font{% endtrans %}</a></nav>

	{% form_theme form 'forms.html.twig' %}
	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}
	    <fieldset data-uk-margin>
		    <button class="uk-button uk-button-primary" type="submit"><i class="uk-icon-plus"></i> add.font</button>
	   	</fieldset>
	</form>
</section>
{% endblock %}