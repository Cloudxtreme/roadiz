{% if not head.ajax %}{% set baseTemplate = '@Rozier/base.html.twig' %}{% else %}{% set baseTemplate = '@Rozier/ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global">
    <header class="content-header header-settingGroup header-settingGroup-delete">
       <h1 class="content-title settingGroup-delete-title">{{ "delete.settingGroup.%name%"|trans({'%name%': settingGroup.getName })|truncate(25, true, '[â€¦]') }}</h1>
    </header>

    <article class="content content-delete content-no-action-menu">
        {% form_theme form '@Rozier/forms.html.twig' %}
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <legend>{% trans %}are_you_sure.delete.settingGroup{% endtrans %}</legend>
                <a href="{{ path('settingGroupsHomePage') }}" class="uk-button"><i class="uk-icon-rz-back-parent"></i> {% trans %}cancel{% endtrans %}</a>
                <button class="uk-button uk-button-danger" type="submit">
                    <i class="uk-icon-rz-trash-o"></i> <span class="label">{% trans %}delete{% endtrans %}</span>
                </button>
            </fieldset>
        {{ form_end(form) }}
    </article>
</section>
{% endblock %}
