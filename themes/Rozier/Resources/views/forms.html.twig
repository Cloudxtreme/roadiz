                    {% include '@Rozier/widgets/customFormSmallThumbnail.html.twig' with {
                    'customForm':customForm,
                    'name': name,
                    'full_name': full_name ~ '[' ~ loop.index0 ~ ']',
                    'read_only': read_only,
