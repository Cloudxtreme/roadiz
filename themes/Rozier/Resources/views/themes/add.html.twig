{% if not head.ajax %}{% set baseTemplate = 'base.html.twig' %}{% else %}{% set baseTemplate = 'ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global manage-themes">

    <header class="content-header header-themes header-themes-add">
        <h1 class="content-title themes-list-title">{% trans %}add.theme{% endtrans %}</h1>
    </header>

    <article class="content content-themes-add">
        {% form_theme form 'forms.html.twig' %}
        <form id="add-theme-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                <button data-action-save="#add-theme-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <span class="icon-container"><i class='uk-icon-plus'></i></span>
                    <span class="label"><span class="label-text">{% trans %}add.theme{% endtrans %}</span></span>
                </button>
            </fieldset>
        </form>
    </article>
    {% include 'themes/actionsMenu.html.twig' %}
</section>
{% endblock %}