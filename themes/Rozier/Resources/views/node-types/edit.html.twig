{% extends 'base.html.twig' %}


{% block content %}
<section id="manage-node-type">
	<h1 id="node-type-title">{{ "edit.nodeType.%name%"|trans({'%name%': nodeType.getDisplayName}) }}</h1>

	{% form_theme form 'forms.html.twig' %}
	<form id="edit-node-type-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
	    {{ form_widget(form) }}
	    <fieldset data-uk-margin>
	    	{% spaceless %}
            <button data-action-save="#edit-node-type-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                <i class="uk-icon-save"></i>
                <span class="label">{% trans %}save{% endtrans %}</span>
            </button>
            {% endspaceless %}
   		</fieldset>
	</form>

	{% include 'node-types/actionsMenu.html.twig' %}
</section>
{% endblock %}
