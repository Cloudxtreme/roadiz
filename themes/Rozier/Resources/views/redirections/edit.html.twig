{% if not head.ajax %}{% set baseTemplate = '@Rozier/base.html.twig' %}{% else %}{% set baseTemplate = '@Rozier/ajaxBase.html.twig' %}{% endif %}{% extends baseTemplate %}

{% block content %}
<section class="content-global">

    <header class="content-header header-redirection header-redirection-add">
        <h1 class="content-title">{{ "edit.redirection"|trans }}</h1>
        <a class="content-header-nav-back uk-navbar-content" href="{{ path('redirectionsHomePage') }}" title="{% trans %}back_to.redirections{% endtrans %}" data-uk-tooltip="{animation:true}"><i class="uk-icon-rz-back-parent"></i></a>
    </header>

    <article class="content">
        {% form_theme form '@Rozier/forms.html.twig' %}
        <form id="edit-redirection-form" class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
            <fieldset data-uk-margin>
                {% spaceless %}
                <button data-action-save="#edit-redirection-form" class="uk-button uk-button-primary rz-action-save" type="submit">
                    <span class="icon-container"><i class="uk-icon-rz-save-mini"></i></span>
                    <span class="label"><span class="label-text">{% trans %}save{% endtrans %}</span></span>
                </button>
                {% endspaceless %}
            </fieldset>
        </form>
    </article>

    {% include '@Rozier/redirections/actionsMenu.html.twig' %}
</section>
{% endblock %}
