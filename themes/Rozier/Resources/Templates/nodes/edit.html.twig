{% extends 'base.html.twig' %}
{% block content %}
<section id="manage-node">
	<h1 id="node-title">Edit {{ node.getNodeSources[0].getTitle }}</h1>
	<a class="uk-button uk-button-small" href="{{ path('nodesHomePage') }}"><span class="uk-icon-chevron-left"></span>{% trans %}Back to nodes{% endtrans %}</a>

	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
   		{{ form_errors(form) }}

   		<fieldset data-uk-margin>
   			<legend>{{ node.getNodeName }}</legend>
		    {% for item in form %}
		    	{# Node fields  #}
		        {% if item.vars.name != "source" and item.vars.name != "_token" %}
		    	<div class="uk-form-row">
		        	<label class="uk-form-label"for="{{ item.vars.id }}">{{ item.vars.name }}</label>
			        {{ form_errors(item) }}
			        {{ form_widget(item) }}
		    	</div>	
		        {% endif %}
		    {% endfor %}
   		</fieldset>
   		<fieldset data-uk-margin>
   			<legend>Source fields</legend>
		    {% for item in form.source %}
		    <div class="uk-form-row">
		    	{# Source fields  #}
		        <label class="uk-form-label"for="{{ item.vars.id }}">{{ item.vars.name }}</label>
		        {{ form_errors(item) }}
		        {{ form_widget(item) }}
		    </div>
		    {% endfor %}
   		</fieldset>
	    {{ form_rest(form) }}
	    <fieldset data-uk-margin>
	    	<input class="uk-button uk-button-primary" type="submit" />
   		</fieldset>
	</form>
</section>
{% endblock %}