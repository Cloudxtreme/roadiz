{% extends 'base.html.twig' %}


{% block content %}
<section id="manage-document">
	<h1 id="title">{% trans %}Document:{% endtrans %}Â {{ document.getFilename }}</h1>
	<nav>
		<a class="uk-button" href="{{ path('documentsHomePage') }}"><i class="uk-icon-chevron-left"></i> {% trans %}Back to documents{% endtrans %}</a>
	</nav>

	<div class="uk-thumbnail uk-thumbnail-large">
		{% if document.isImage %}
		<img  alt="" src="{{ document.getViewer.getDocumentUrlByArray(thumbnailFormat) }}" />
		{% endif %}
	</div>

	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
   		{{ form_errors(form) }}

   		<fieldset data-uk-margin>
		    {% for item in form %}
		    	{# Node fields  #}
		        {% if item.vars.name != "_token" %}
		    	<div class="uk-form-row">
		        	<label class="uk-form-label"for="{{ item.vars.id }}">{{ item.vars.name }}</label>
			        {{ form_errors(item) }}
			        {{ form_widget(item) }}
		    	</div>	
		        {% endif %}
		    {% endfor %}
   		</fieldset>
	    {{ form_rest(form) }}
	    <fieldset data-uk-margin>
	    	<input class="uk-button uk-button-primary" type="submit" />
   		</fieldset>
	</form>
</section>
{% endblock %}