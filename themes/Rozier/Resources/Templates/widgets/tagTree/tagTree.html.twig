{% if tagTree %}
<nav class="tagtree-widget">
	<a href="{{ path('tagsAddPage') }}" class="uk-button uk-button-mini"><i class="uk-icon-plus"></i> {% trans %}add.tag{% endtrans %}</a>
	<ul class="root-tree uk-nestable" data-uk-nestable="{'group':'tagTree'}" data-parent-tag-id="{{ tag.getId }}">
		{% for ctag in tagTree.getTags %}
			{% include 'widgets/tagTree/singleTag.html.twig' with { "tag":ctag, "tagTree":tagTree } only %}
		{% endfor %}
	</ul>
</nav>
{% endif %}