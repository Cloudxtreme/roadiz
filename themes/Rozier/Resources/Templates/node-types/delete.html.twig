{% extends 'base.html.twig' %}


{% block content %}
<section id="manage-node-type">
	<h1 id="node-type-title">{% trans %}Delete node-type:{% endtrans %}Â {{ node_type.getName }}</h1>

	<form class="uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(form) }}>
   		{{ form_errors(form) }}
	    {% for item in form %}
	    	{# Node fields  #}
	        {% if item.vars.name != "_token" %}
		        {{ form_errors(item) }}
		        {{ form_widget(item) }}
	        {% endif %}
	    {% endfor %}
	    {{ form_rest(form) }}
	    <fieldset data-uk-margin>
	    	<legend>{% trans %}Are you sure you want to delete this node-type and all its inherited nodes and newsletters?{% endtrans %}</legend>
	    	<a href="{{ path('nodeTypesHomePage') }}" class="uk-button">{% trans %}Cancel{% endtrans %}</a>
	    	<input class="uk-button uk-button-danger" type="submit" />
   		</fieldset>
	</form>
</section>
{% endblock %}