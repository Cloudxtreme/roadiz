{% extends 'base.html.twig' %}

{% block content %}

    <article id="content-user" class="content">

        <div class="content-title-cont">
            <h1 class="content-title">{% trans %}user.title{% endtrans %}</h1>   
        </div>

        <div class="content-progress">
            <div class="content-progress-item first active"></div>
            <div class="content-progress-item active"></div>
            <div class="content-progress-item active"></div>
            <div class="content-progress-item active"></div>
            <div class="content-progress-item active"></div>
            <div class="content-progress-item"></div>
            <div class="content-progress-item last"></div>
        </div>

        <div class="content-text-cont">
            
            <div class="content-text">

                {% trans %}user.message{% endtrans %} 

                {% if error %}
                <div class="uk-alert uk-alert-danger">
                    <a href="#" class="uk-alert-close uk-close"></a>
                    <p>{% trans %}cannot.create.user{% endtrans %}</p>
                    <p>{{ errorMessage }}</p>
                </div>
                {% endif %}
                
                {% form_theme userForm 'forms.html.twig' %}
                <form id="formUser" class="install-form uk-form uk-form-stacked" action="#" method="post" {{ form_enctype(userForm) }}>
                    {{ form_widget(userForm) }}
                    
                    <button class="form-save-button uk-button uk-button-primary"><i class="uk-icon-magic"></i> {% trans %}user.create{% endtrans %}</button>
                </form>

            </div>

            <a class="content-button uk-button" href="{{ path('installThemesPage') }}"><i class="uk-icon-share"></i> {% trans %}skip.user.goto.theme{% endtrans %}</a>
            <a class="content-button uk-button uk-button-success" href="{{ path('installImportPage') }}"><i class="uk-icon-arrow-circle-left"></i> {% trans %}goto.import{% endtrans %}</a>

        </div>
        
    </article>

{% endblock %}
